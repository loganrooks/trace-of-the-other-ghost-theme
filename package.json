{
    "name": "trace-of-the-other",
    "description": "A literary Ghost theme with enhanced footnotes and expandable commentary, preserving simple editor workflow",
    "version": "2.6.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Theme Author",
        "email": "contact@trace-of-the-other.com"
    },
    "config": {
        "posts_per_page": 10,
        "custom": {
            "primary_accent_color": {
                "type": "color",
                "default": "#00ff00",
                "description": "Primary accent color (hacker green) for footnotes and links"
            },
            "extension_accent_color": {
                "type": "color", 
                "default": "#ff8800",
                "description": "Accent color for paragraph extensions [+]"
            },
            "interactive_text_color": {
                "type": "color",
                "default": "#ff0000",
                "description": "Text color for interactive markers [?]"
            },
            "hyperlink_color": {
                "type": "color",
                "default": "#00a8ff",
                "description": "Color for hyperlinks in content and tooltips"
            },
            "enable_modern_footnotes": {
                "type": "boolean", 
                "default": true,
                "group": "post",
                "description": "Enable footnote tooltips on hover"
            },
            "tooltip_bg_opacity": {
                "type": "select",
                "options": ["0.85", "0.90", "0.95", "0.98", "1.0"],
                "default": "0.95",
                "group": "post",
                "description": "Footnote tooltip background opacity (0.95 = 95% opaque)"
            },
            "tooltip_max_width": {
                "type": "select",
                "options": ["300px", "400px", "500px", "600px"],
                "default": "400px",
                "group": "post",
                "description": "Maximum width for footnote tooltips"
            },
            "enable_extensions": {
                "type": "boolean",
                "default": true,
                "group": "post",
                "description": "Enable paragraph extensions using [+][content] syntax"
            },
            "enable_deconstruction": {
                "type": "boolean",
                "default": true,
                "group": "post",
                "description": "Enable text deconstruction effects (experimental)"
            },
            "interactive_bg_opacity": {
                "type": "select",
                "options": ["0.5", "0.7", "0.8", "0.9", "0.95"],
                "default": "0.8",
                "group": "post",
                "description": "Background opacity for interactive [?] overlays"
            },
            "animation_speed": {
                "type": "select",
                "options": ["fast", "normal", "slow"],
                "default": "normal", 
                "description": "Speed of typing animations and expand/collapse effects"
            },
            "enable_keyboard_navigation": {
                "type": "boolean",
                "default": true,
                "description": "Enable keyboard shortcuts (Tab to navigate footnotes)"
            },
            "mobile_responsive": {
                "type": "boolean",
                "default": true,
                "description": "Optimize tooltips and interactions for mobile devices"
            },
            "debug_mode": {
                "type": "boolean",
                "default": false,
                "description": "Enable verbose console logging (development only)"
            }
        }
    },
    "keywords": [
        "ghost",
        "theme", 
        "literary",
        "marginalia",
        "footnotes",
        "academic",
        "interactive",
        "responsive"
    ]
}
